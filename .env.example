# Stock Analysis App - Environment Configuration

# ==============================================
# DATA SOURCE API KEYS
# ==============================================

# Sectors.app API (Primary - Indonesia IDX)
# Get your API key from: https://sectors.app/api
SECTORS_API_KEY=your_sectors_api_key_here

# Twelve Data API (Backup & Additional Data)
# Get your API key from: https://twelvedata.com
# Free tier: 800 calls/day
TWELVEDATA_API_KEY=your_twelvedata_api_key_here

# Alpha Vantage API (Optional - Global Markets)
# Get your API key from: https://www.alphavantage.co/support/#api-key
# Free tier: 25 calls/day
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Environment: development | production
APP_ENV=development

# Backend server settings
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000

# Frontend server settings
FRONTEND_PORT=5173

# ==============================================
# DATABASE SETTINGS
# ==============================================

# SQLite database path for caching
DATABASE_PATH=./data/stock_cache.db

# Cache expiration time (in seconds)
# 3600 = 1 hour, 86400 = 1 day
CACHE_EXPIRATION=3600

# ==============================================
# API RATE LIMITING
# ==============================================

# Requests per minute limit
RATE_LIMIT_PER_MINUTE=60

# Enable request caching to reduce API calls
ENABLE_CACHE=true

# ==============================================
# LOGGING
# ==============================================

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# ==============================================
# SECURITY
# ==============================================

# Secret key for session management (generate random string)
SECRET_KEY=your-secret-key-change-this-in-production

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==============================================
# OPTIONAL SETTINGS
# ==============================================

# Enable debug mode (more verbose logging)
DEBUG=true

# Enable API request logging
LOG_API_REQUESTS=true

# Max historical data days to fetch
MAX_HISTORICAL_DAYS=365
